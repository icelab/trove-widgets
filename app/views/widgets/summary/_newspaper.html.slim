.summary__item class="summary__item--#{modifier}" role='summary__item' data-type="#{newspaper == newspapers.first ? 'active' : 'normal'}"

  h1.summary__title= link_to newspaper.title, newspaper.url, target: :blank

  p.summary__years class="summary__years--#{modifier}" #{human_counts('issue', newspaper.issuecount)} from #{newspaper.start_date} to #{newspaper.end_date}

  - unless modifier == 'statesearch'
    .search.search--summary= render 'form', placeholder: 'Search in newspaper', hidden_name: 'l-advtitle', hidden_value: newspaper.id

  p.summary__stats #{human_counts('article', newspaper.articles_count)}, #{human_counts('comment', newspaper.comments_count)}, #{human_counts('tag', newspaper.tags_count)}
